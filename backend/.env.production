# Valor IVX Production Environment Variables
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-super-secret-key-here-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/valor_ivx_prod

# CORS Configuration
CORS_ORIGINS=https://valor-ivx.com,https://www.valor-ivx.com

# SSL/HTTPS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/path/to/your/ssl/certificate.crt
SSL_KEY_PATH=/path/to/your/ssl/private.key

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Alpha Vantage API Configuration
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key-here

# Logging Configuration
LOG_LEVEL=INFO

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true

# Performance Configuration
WORKER_PROCESSES=4
WORKER_TIMEOUT=120
WORKER_MAX_REQUESTS=1000

# Cache Configuration
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Security Configuration
# These should be strong, randomly generated values
# You can generate them using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-generated-secret-key-here
JWT_SECRET_KEY=your-generated-jwt-secret-key-here 